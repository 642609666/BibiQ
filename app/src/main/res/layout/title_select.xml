<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:background="@color/title_white"
              android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_title_search_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_title_search_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="默认排序"/>

        <ImageView
            android:id="@+id/iv_title_search_left"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/tv_title_search_left"
            android:src="@drawable/ic_bangumi_index_close"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_title_search_centre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_title_search_centre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="全部时长"/>

        <ImageView
            android:id="@+id/iv_title_search_centre"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/tv_title_search_left"
            android:src="@drawable/ic_bangumi_index_close"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_title_search_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_title_search_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="全部分区"/>

        <ImageView
            android:id="@+id/iv_title_search_right"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/tv_title_search_left"
            android:src="@drawable/ic_bangumi_index_close"/>
    </LinearLayout>
</LinearLayout>