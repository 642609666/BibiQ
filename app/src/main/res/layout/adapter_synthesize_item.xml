<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="3dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/title_black"
            android:paddingBottom="3dp"
            android:paddingTop="3dp">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="200dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                android:src="@drawable/wc_ac_01"/>

            <TextView
                android:id="@+id/tv_playtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_icon"
                android:layout_alignRight="@id/iv_icon"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="6dp"
                android:background="@color/black_lucency"
                android:padding="2dp"
                android:text="16:22"
                android:textColor="@color/title_white"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_recomm_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="10dp"
                android:text="你是谁啊"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/tv_recomm_context"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_answer_danmaku2"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:padding="10dp"
                android:text="你是谁啊"
                />

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_recomm_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/ic_watching"
                    android:drawablePadding="5dp"
                    android:text="3.4万"
                    />

                <TextView
                    android:id="@+id/tv_recomm_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:drawableLeft="@drawable/ic_answer_danmaku2"
                    android:drawablePadding="5dp"
                    android:text="3.4万"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>