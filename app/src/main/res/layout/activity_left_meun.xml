<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:layout_height="match_parent"
    android:background="@color/title_white"
    android:fitsSystemWindows="true"
    >


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:minHeight="30dp"
            android:orientation="vertical"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/back_main"
                >


                <ImageView
                    android:id="@+id/iv_left_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/bili_default_avatar"/>

                <TextView
                    android:id="@+id/tv_left_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_left_icon"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:drawablePadding="10dp"
                    android:text="点击头像登录"
                    android:textColor="@color/title_white"/>

                <ImageView
                    android:id="@+id/iv_left_theme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/ic_switch_night"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_bangumi_calendar_6"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RadioGroup
            android:id="@+id/rg_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:background="@color/title_back"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rb_left_home"
                style="@style/left_theme"
                android:drawableLeft="@drawable/rb_home_selector"
                android:text="首页"
                />

            <RadioButton
                android:id="@+id/rb_left_big_member"
                style="@style/left_theme"
                android:drawableLeft="@drawable/rb_big_member_selector"
                android:text="我的大会员"
                />

            <RadioButton
                android:id="@+id/rb_left_integral"
                style="@style/left_theme"
                android:drawableLeft="@drawable/rb_integral_selector"
                android:text="会员积分"
                />

            <RadioButton
                android:id="@+id/rb_left_cache"
                style="@style/left_theme"
                android:drawableLeft="@drawable/rb_cache_selector"
                android:text="离线缓存"
                />

            <RadioButton
                android:id="@+id/rb_left_look"
                style="@style/left_theme"
                android:drawableLeft="@drawable/rb_look_selector"
                android:text="稍后再看"
                />

            <RadioButton
                android:id="@+id/rb_left_collect"
                style="@style/left_theme"
                android:drawableLeft="@drawable/rb_collect_selector"
                android:text="我的收藏"
                />

            <RadioButton
                android:id="@+id/rb_left_record"
                style="@style/left_theme"
                android:drawableLeft="@drawable/rb_record_selector"
                android:text="历史记录"
                />

            <RadioButton
                android:id="@+id/rb_left_attention"
                style="@style/left_theme"
                android:drawableLeft="@drawable/rb_attention_selector"
                android:text="我的关注"
                />

            <RadioButton
                android:id="@+id/rb_left_wallet"
                style="@style/left_theme"
                android:drawableLeft="@drawable/rb_wallet_selector"
                android:text="B币钱包"
                />

            <RadioButton
                android:id="@+id/rb_left_theme"
                style="@style/left_theme"
                android:drawableLeft="@drawable/rb_theme_selector"
                android:text="主题选择"
                />

            <RadioButton
                android:id="@+id/rb_left_setting"
                style="@style/left_theme"
                android:drawableLeft="@drawable/rb_setting_selector"
                android:text="设置与帮助"
                />

        </RadioGroup>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>