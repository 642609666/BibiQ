<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="190dp"
              android:layout_height="wrap_content"
              android:background="@color/title_white"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_streaming_image"
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/wc_ac_16"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_streaming_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="hdhd"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/title_black"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_streaming_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:drawableLeft="@drawable/ic_watching"
            android:drawablePadding="5dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="这尼玛的"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_streaming_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="5dp"
            android:drawableLeft="@drawable/ic_answer_danmaku2"
            android:drawablePadding="5dp"
            android:gravity="right"
            android:text="1333 "
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>