<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--TabLayout样式-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">100dp</item>
        <item name="tabMinWidth">62dp</item>
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">#FFFFFF</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#66FFFFFF</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--TabLayout样式-->
    <style name="MyCustomTabLayout1" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">100dp</item>
        <item name="tabMinWidth">22dp</item>
        <item name="tabIndicatorColor">#FFFFFF</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">#FFFFFF</item>
    </style>
    <!--TabLayout样式-->
    <style name="MyCustomTabLayout2" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">100dp</item>
        <item name="tabMinWidth">90dp</item>
        <item name="tabIndicatorColor">@color/back_main</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance1</item>
        <item name="tabSelectedTextColor">@color/back_main</item>
    </style>

    <style name="MyCustomTabTextAppearance1" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/title_cinereus</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="MyCustomTabLayout3" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">120dp</item>
        <item name="tabMinWidth">120dp</item>
        <item name="tabIndicatorColor">@color/back_main</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance1</item>
        <item name="tabSelectedTextColor">@color/back_main</item>
    </style>
    <!--左侧菜单的样式-->
    <style name="left_theme">
        <item name="android:button">@null</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:drawablePadding">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@drawable/rb_left_color</item>
        <item name="android:background">@drawable/rb_left_background</item>
    </style>

    <!--发现布局的公共样式-->
    <style name="find_theme">
        <item name="android:background">@color/title_white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">25dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/title_black</item>
    </style>

    <style name="ToolBar.TitleText" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textSize">14sp</item>
    </style>

</resources>
