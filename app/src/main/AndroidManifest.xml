<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.atguigu.bibiq">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.WelcomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:configChanges="screenSize|orientation|keyboardHidden">
        </activity>
        <activity android:name=".home.adapter.WebActivity">
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:windowSoftInputMode="stateVisible">
        </activity>
        <activity android:name=".find.adapter.TopicActivity">
        </activity>
        <activity android:name=".find.activity.CentreActivity">
        </activity>
        <activity android:name=".find.activity.BlackHouseActivity">
        </activity>
        <activity android:name=".find.OriginalActivity">
        </activity>
    </application>

</manifest>